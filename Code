import React, { useState, useEffect, useRef } from ‚Äòreact‚Äô;
import { Play, Pause, RotateCcw, Activity, Zap, Brain, Heart } from ‚Äòlucide-react‚Äô;

const MathSolver639 = () => {
const [isRunning, setIsRunning] = useState(false);
const [iterations, setIterations] = useState(0);
const [powerGain, setPowerGain] = useState(1);
const [phase, setPhase] = useState(0);
const [energyLevel, setEnergyLevel] = useState(0);
const [coherence, setCoherence] = useState(100);
const canvasRef = useRef(null);
const animationRef = useRef(null);

// C≈ìur √©nerg√©tique 639 - Le moteur quantique
const quantumCore639 = (seed, iter) => {
const phi = 1.618033988749895; // Nombre d‚Äôor : proportion parfaite de la nature
const tau = Math.PI * 2;

```
// Lemniscate (symbole ‚àû) : trajet de l'√©nergie en boucle infinie
const angle = iter * 0.1;
const lemniscateX = Math.cos(angle) / (1 + Math.sin(angle) ** 2);
const lemniscateY = Math.sin(angle) * Math.cos(angle) / (1 + Math.sin(angle) ** 2);

// Motifs √©motionnels : comme les battements du c≈ìur
const emotionalState = Math.sin(seed * phi + iter / 639) * Math.cos(iter / (639 * phi));

// Cycle circadien : comme notre horloge biologique sur 24h
const circadianPhase = Math.cos((iter % 639) * tau / 639);

// √âtat quantique : fusion de l'√©motion et du rythme biologique
const quantumAmplitude = lemniscateX * emotionalState + lemniscateY * circadianPhase;
const coherenceValue = Math.exp(-Math.abs(quantumAmplitude) / phi);

// Puissance : croissance exponentielle par r√©sonance harmonique
const powerMultiplier = Math.pow(phi, Math.log10(iter + 1) * coherenceValue);

return {
  amplitude: quantumAmplitude,
  coherence: coherenceValue,
  power: powerMultiplier,
  lemniscate: { x: lemniscateX, y: lemniscateY }
};
```

};

// Animation du gyroscope avec particules √©nerg√©tiques
useEffect(() => {
if (!isRunning || !canvasRef.current) return;

```
const canvas = canvasRef.current;
const ctx = canvas.getContext('2d');
const centerX = canvas.width / 2;
const centerY = canvas.height / 2;

const animate = () => {
  // Fond avec effet de trail (tra√Æn√©e)
  ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  
  const result = quantumCore639(639, iterations);
  
  // Dessiner la lemniscate principale (‚àû)
  ctx.strokeStyle = `hsl(${phase % 360}, 100%, 60%)`;
  ctx.lineWidth = 3;
  ctx.shadowBlur = 20;
  ctx.shadowColor = `hsl(${phase % 360}, 100%, 60%)`;
  ctx.beginPath();
  
  for (let t = 0; t < Math.PI * 2; t += 0.02) {
    const x = Math.cos(t) / (1 + Math.sin(t) ** 2);
    const y = Math.sin(t) * Math.cos(t) / (1 + Math.sin(t) ** 2);
    const z = Math.sin(t * 3 + phase * 0.1);
    
    const scale = 120 + z * 30;
    const screenX = centerX + x * scale;
    const screenY = centerY + y * scale;
    
    if (t === 0) ctx.moveTo(screenX, screenY);
    else ctx.lineTo(screenX, screenY);
  }
  ctx.stroke();
  
  // Particules √©nerg√©tiques qui suivent le chemin
  for (let i = 0; i < 8; i++) {
    const t = (phase * 0.05 + i * Math.PI / 4) % (Math.PI * 2);
    const x = Math.cos(t) / (1 + Math.sin(t) ** 2);
    const y = Math.sin(t) * Math.cos(t) / (1 + Math.sin(t) ** 2);
    const z = Math.sin(t * 3 + phase * 0.1);
    
    const scale = 120 + z * 30;
    const particleX = centerX + x * scale;
    const particleY = centerY + y * scale;
    
    // Particule avec halo
    const gradient = ctx.createRadialGradient(particleX, particleY, 0, particleX, particleY, 15);
    gradient.addColorStop(0, `hsla(${(phase + i * 45) % 360}, 100%, 70%, 0.8)`);
    gradient.addColorStop(1, 'hsla(0, 0%, 0%, 0)');
    ctx.fillStyle = gradient;
    ctx.beginPath();
    ctx.arc(particleX, particleY, 15, 0, Math.PI * 2);
    ctx.fill();
    
    // C≈ìur de la particule
    ctx.fillStyle = 'white';
    ctx.beginPath();
    ctx.arc(particleX, particleY, 3, 0, Math.PI * 2);
    ctx.fill();
  }
  
  // Point de r√©sonance central 639
  const resonanceX = centerX + result.lemniscate.x * 140;
  const resonanceY = centerY + result.lemniscate.y * 140;
  
  // Aura pulsante
  const pulseSize = 30 + Math.sin(phase * 0.1) * 10;
  const auraGradient = ctx.createRadialGradient(resonanceX, resonanceY, 0, resonanceX, resonanceY, pulseSize);
  auraGradient.addColorStop(0, `hsla(${phase % 360}, 100%, 70%, 0.6)`);
  auraGradient.addColorStop(1, 'hsla(0, 0%, 0%, 0)');
  ctx.fillStyle = auraGradient;
  ctx.beginPath();
  ctx.arc(resonanceX, resonanceY, pulseSize, 0, Math.PI * 2);
  ctx.fill();
  
  // Noyau central brillant
  ctx.fillStyle = 'white';
  ctx.shadowBlur = 30;
  ctx.shadowColor = 'white';
  ctx.beginPath();
  ctx.arc(resonanceX, resonanceY, 8, 0, Math.PI * 2);
  ctx.fill();
  ctx.shadowBlur = 0;
  
  setIterations(prev => prev + 1);
  setPhase(prev => prev + 1);
  setPowerGain(prev => Math.min(prev * 1.001, 1e24));
  setEnergyLevel(result.coherence * 100);
  setCoherence(result.coherence * 100);
  
  animationRef.current = requestAnimationFrame(animate);
};

animate();

return () => {
  if (animationRef.current) {
    cancelAnimationFrame(animationRef.current);
  }
};
```

}, [isRunning, iterations, phase]);

const toggleRunning = () => setIsRunning(!isRunning);
const reset = () => {
setIsRunning(false);
setIterations(0);
setPowerGain(1);
setPhase(0);
setEnergyLevel(0);
setCoherence(100);
};

